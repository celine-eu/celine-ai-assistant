APP_ENV=dev
LOG_LEVEL=INFO

OPENAI_API_KEY=replace-me
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_EMBED_MODEL=text-embedding-3-small

QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=
QDRANT_COLLECTION=celine_docs

# Docs source: local or S3 (MinIO)
# Examples:
#   DOCS_URI=file:///data/docs
#   DOCS_URI=/data/docs
#   DOCS_URI=s3://docs/prefix/
DOCS_URI=s3://docs/
DOCS_POLL_INTERVAL_SECONDS=60

# S3-compatible settings used by s3fs when DOCS_URI starts with s3://
S3_ENDPOINT_URL=http://minio:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_REGION=us-east-1

INGEST_ENABLE=true
INGEST_FORCE_RELOAD_ON_START=false
MANIFEST_PATH=/data/manifest.json

# Chat history storage (sqlite)
CHAT_DB_PATH=/data/chat_history.sqlite3

# User identity via oauth2-proxy headers; optional JWT verification
OAUTH2_TRUST_HEADERS=true
OAUTH2_JWKS_URL=
OAUTH2_ISSUER=
OAUTH2_AUDIENCE=
OAUTH2_JWT_COOKIE_NAME=

# Uploads
UPLOADS_URI=file:///data/uploads
MAX_UPLOAD_MB=25
OPENAI_VISION_MODEL=gpt-4o-mini
